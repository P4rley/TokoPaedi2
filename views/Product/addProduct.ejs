<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>

<body>
    <div style="width: 50%; margin: 50px auto">
        <button><a href="/">Back</a></button>
        <h1>Add your product</h1>
        <% if (errors) { %>
            <p style="color:red">
            <% errors.split(',').forEach((el, i)=>{ %>
                <%= i+1 %>. <%=el %> <br>
                <% }) %>
            </p>
        <% } %>
        
        <form action="/products/add" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="name" placeholder="tulis nama produk" name="name">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Jelaskan tentang produkmu"
                    name="description"></textarea>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image Product</label>
                <input type="text" class="form-control" id="img" placeholder="foto produk" name="imageUrl">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" placeholder="Berapa harga produkmu" name="price">
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Category</label>
                <select name="CategoryId" class="form-select" aria-label="Default select example">
                    <option value="" disabled selected>--choose one--</option>
                    <% categories.forEach((el)=> { %>
                        <option value="<%= el.id %>">
                            <%= el.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</body>

</html>