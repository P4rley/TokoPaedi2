<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>

<body>
    <div style="width: 50%; margin: 50px auto">
        <button><a href="/products/detail/<%= product.id %>">Cancel</a></button>
        <h1>Add your product</h1>

        <form action="/products/edit/<%= product.id %>" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input value="<%= product.name%>" type="text" class="form-control" id="name"
                    placeholder="tulis nama produk" name="name">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Jelaskan tentang produkmu"
                    name="description"><%= product.description%></textarea>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image Product</label>
                <input value="<%= product.imageUrl%>" type="text" class="form-control" id="img"
                    placeholder="foto produk" name="imageUrl">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input value="<%= product.price%>" type="number" class="form-control" id="price"
                    placeholder="Berapa harga produkmu" name="price">
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Stock</label>
                <input value="<%= product.stock%>" type="number" class="form-control" id="stock" placeholder="Berapa stock produkmu"
                    name="stock">
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Category</label>
                <select name="CategoryId" class="form-select" aria-label="Default select example">
                    <option value="" disabled selected>--- Select Category</option>
                    <% categories.forEach((el)=> { %>
                        <% if (el.id==product.CategoryId){ %>
                            <option value="<%=el.id%>" selected>
                                <%=el.name%>
                            </option>
                            <% } else {%>
                                <option value="<%=el.id%>">
                                    <%=el.name%>
                                </option>
                            <% } %>
                        <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</body>

</html>