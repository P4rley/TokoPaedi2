<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing Page</title>
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        .header {
            width: 90vw;
            margin: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header div {
            display: inline-flex;
            align-items: center;
        }

        a {
            margin: 5px;
        }

        .content-container {
            display: flex;
            flex-wrap: wrap;
            padding: 20px;
            gap: 25px;
        }

        .card {
            padding: 10px;
            width: 20vw;
            height: 35vh;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 4px 6px 0 hsla(0, 0%, 0%, 0.2);
        }

        .card div {
            width: 100%;
            display: flex;
            justify-content: space-evenly;
        }

        .card img {
            margin: 0 auto;
            width: 200px;
            height: 160px;
            object-fit: contain;
        }

        .card h4 {
            color: grey;
            text-align: center;
        }

        .btn {
            margin: 0 20px;
            padding: 5px 0;
            width: 80px;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            background-color: lightgreen;
            color: #000000;
        }

        .btn-detail {
            color: white;
            background-color: rgb(46, 49, 245);
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>List Product</h1>
        <div>
            <div>
                <form action="/" method="get">
                    <input type="text" name="search" size="60">
                    <input type="submit" value="Search" style="margin-right: 100px;">
                </form>
                Sort by
                <form action="/" method="get">
                    <select name="sort" id="">
                        <option value="" selected disabled>Pilih Urutan</option>
                        <option value="price">Price</option>
                    </select>
                    <select name="order" id="">
                        <option value="" selected disabled>Pilih</option>
                        <option value="ASC">Dari terendah</option>
                        <option value="DESC">Dari tertinggi</option>
                    </select>
                    <input type="submit" value="Sort" style="width: 50px;">
                </form>
            </div>
            <div>
                Group by
                <form action="/" method="get">
                    <select name="group" id="">
                        <option value="" selected disabled>Pilih Category</option>
                        <% categories.forEach((el) => { %>
                            <option value="<%= el.id %>"><%= el.name %></option>
                            <% }) %>
                        </select>
                        <input type="submit" value="Group" style="width: 50px;">
                        <button><a href="/">Clear</a></button>
                </form>
            </div>
            <a href="/products/add" class="btn" style="color: white;">Add Product</a>
        </div>
    </div>
    <div class="content-container">
        <% products.forEach((el)=> { %>
            <div class="card">
                <img src="<%= el.imageUrl %>">
                <div>
                    <h3>
                        <%=el.name%>
                    </h3>
                    <h3>
                        <%=el.formattedPrice()%>
                    </h3>
                </div>
                <h4>
                    <%=el.developerName%>
                </h4>
                <a class="btn btn-detail" href="/products/detail/<%=el.id%>">Detail</a>
            </div>
            <% }) %>
    </div>
</body>

</html>